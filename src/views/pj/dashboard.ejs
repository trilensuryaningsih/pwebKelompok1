<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard PJ - Penanggung Jawab</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>
<body class="bg-[#F0EAE0] font-sans">
  <div class="flex">
    <%- include('../partials/pj/sidebar') %>
    
    <div class="flex-1 p-8">
      <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-[#181C14]">Dashboard Penanggung Jawab UMC</h1>
          <p class="text-[#3C3D37] mt-2">Selamat datang di panel Penanggung Jawab UMC</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-[#697565] text-[#F0EAE0]">
                <span class="material-icons text-2xl">build</span>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-[#3C3D37]">Total Perbaikan</p>
                <p class="text-2xl font-semibold text-[#181C14]"><%= stats ? stats.total : 0 %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-[#697565] text-[#F0EAE0]">
                <span class="material-icons text-2xl">pending</span>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-[#3C3D37]">Pengajuan Perbaikan </p>
                <p class="text-2xl font-semibold text-[#181C14]"><%= stats ? stats.pending : 0 %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-[#697565] text-[#F0EAE0]">
                <span class="material-icons text-2xl">check_circle</span>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-[#3C3D37]">Selesai</p>
                <p class="text-2xl font-semibold text-[#181C14]"><%= stats ? stats.completed : 0 %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h2 class="text-xl font-semibold text-[#181C14] mb-4">Aksi Cepat</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <a href="/pj/repair" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-white/50 transition-colors">
              <div class="p-2 rounded-full bg-[#697565] text-[#F0EAE0] mr-4">
                <span class="material-icons">build</span>
              </div>
              <div>
                <h3 class="font-medium text-[#181C14]">Verifikasi Pengajuan Perbaikan</h3>
                <p class="text-sm text-[#3C3D37]">Kelola dan verifikasi pengajuan perbaikan alat</p>
              </div>
            </a>

            <a href="/pj/items" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-white/50 transition-colors">
              <div class="p-2 rounded-full bg-[#697565] text-[#F0EAE0] mr-4">
                <span class="material-icons">inventory</span>
              </div>
              <div>
                <h3 class="font-medium text-[#181C14]">Data Alat</h3>
                <p class="text-sm text-[#3C3D37]">Lihat dan kelola data alat</p>
              </div>
            </a>
          </div>
        </div>

        <!-- Generate Report Section -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h2 class="text-xl font-semibold text-[#181C14]">Generate Laporan</h2>
              <p class="text-[#3C3D37] mt-1">Download laporan lengkap data alat, jasa, dan perbaikan</p>
            </div>
            <a 
              href="/pj/reports/generate" 
              class="bg-[#697565] hover:bg-[#3C3D37] text-white px-6 py-3 rounded-lg flex items-center transition-colors"
            >
              <span class="material-icons mr-2">download</span>
              Download PDF
            </a>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
            <a href="/pj/items" class="block bg-gray-50 p-3 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <span class="material-icons text-[#697565] mr-2">inventory</span>
                <span class="font-medium">Data Alat</span>
              </div>
              <p class="text-[#3C3D37] mt-1">Daftar lengkap alat dengan status</p>
            </a>
            
            <a href="/pj/services" class="block bg-gray-50 p-3 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <span class="material-icons text-[#697565] mr-2">miscellaneous_services</span>
                <span class="font-medium">Data Jasa</span>
              </div>
              <p class="text-[#3C3D37] mt-1">Daftar jasa yang tersedia di UMC</p>
            </a>
            
            <a href="/pj/repair" class="block bg-gray-50 p-3 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <span class="material-icons text-[#697565] mr-2">pending</span>
                <span class="font-medium">Pengajuan Perbaikan</span>
              </div>
              <p class="text-[#3C3D37] mt-1">Daftar pengajuan yang menunggu verifikasi</p>
            </a>
            
            <a href="/pj/repair" class="block bg-gray-50 p-3 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <span class="material-icons text-[#697565] mr-2">check_circle</span>
                <span class="font-medium">Perbaikan Selesai</span>
              </div>
              <p class="text-[#3C3D37] mt-1">Riwayat perbaikan yang telah selesai</p>
            </a>
          </div>
        </div>

        <!-- Recent Repairs -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-[#181C14]">Perbaikan Terbaru</h2>
            <a href="/pj/repair" class="text-[#697565] hover:text-[#3C3D37] text-sm font-medium">Lihat Pengajuan Perbaikan</a>
          </div>
          
          <% if (typeof recentRepairs !== 'undefined' && recentRepairs.length > 0) { %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-white/50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-[#3C3D37] uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-[#3C3D37] uppercase tracking-wider">Alat</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-[#3C3D37] uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-[#3C3D37] uppercase tracking-wider">Tanggal</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% recentRepairs.forEach((repair) => { %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= repair.id %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= repair.Item ? repair.Item.name : 'N/A' %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% if (repair.status === 'approved') { %>
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                            Menunggu Verifikasi
                          </span>
                        <% } else if (repair.status === 'in_progress') { %>
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-orange-100 text-orange-800">
                            Sedang Diperbaiki
                          </span>
                        <% } else if (repair.status === 'completed') { %>
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Selesai
                          </span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-xs text-gray-400">
                        <%= repair.requestDate ? repair.requestDate.toLocaleDateString('id-ID') : '-' %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-8">
              <span class="material-icons text-gray-400 text-4xl mb-2">build</span>
              <p class="text-gray-500">Belum ada perbaikan yang perlu ditangani</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
</html> 