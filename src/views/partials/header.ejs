<!-- Header -->
    <header
      class="bg-[#F0EAE0] p-4 border-b border-[#3C3D37] flex justify-end items-center space-x-4"
    >
      <button
        aria-label="Notifications"
        class="text-[#3C3D37] text-lg cursor-pointer  transition"
      >
        <i class="fas fa-bell"></i>
      </button>
      <div
        class="bg-white text-[#3C3D37] text-sm font-normal px-3 py-1 rounded select-none"
      >
        <%= typeof userType !== 'undefined' && userType === 'admin' ? 'Admin' : 'User' %>
      </div>
      <button
        aria-label="User profile"
        class="text-[#3C3D37] text-lg cursor-pointer transition"
      >
        <i class="fas fa-user-circle"></i>
      </button>
    </header>