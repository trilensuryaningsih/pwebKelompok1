<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>- Pemesanan -</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .bg-custom-dark {
            background-color: #181C14;
        }

        .bg-custom-green {
            background-color: #697565;
        }

        .bg-custom-green-dark {
            background-color: #5a6356;
        }

        .focus\:ring-custom-green:focus {
            --tw-ring-color: rgba(105, 117, 101, 0.5);
        }

        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

        .item-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .item-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            border-color: #697565;
        }

        .btn-primary {
            background: linear-gradient(135deg, #697565 0%, #5a6356 100%);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(105, 117, 101, 0.3);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #D9D0C7 0%, #c4b8ad 100%);
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(217, 208, 199, 0.3);
        }

        /* Fixed layout styles */
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f0e9 0%, #e8e0d5 100%);
        }

        .main-container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar-fixed {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            z-index: 50;
            width: 12rem; /* 192px - match w-48 */
            overflow-y: auto;
        }

        .content-wrapper {
            margin-left: 12rem; /* 192px - match sidebar width */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header-fixed {
            position: fixed;
            top: 0;
            left: 12rem; /* 192px - match sidebar width */
            right: 0;
            z-index: 30;
            background: #f5f0e9;
            border-bottom: 1px solid #5a6356;
        }

        .content-scrollable {
            flex: 1;
            padding: 1.5rem;
            margin-top: 4rem; /* Account for fixed header */
        }

        .footer-sticky {
            margin-top: auto; /* Push footer to bottom */
            background: #181C14;
            border-top: 1px solid #2d3748;
            width: 100%;
        }

        /* Responsive design for mobile */
        @media (max-width: 1024px) {
            .sidebar-fixed {
                display: none;
            }
            
            .content-wrapper {
                margin-left: 0;
            }
            
            .header-fixed {
                left: 0;
            }
            
            .content-scrollable {
                padding: 1rem;
                margin-top: 4rem;
            }
            
            .grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .lg\:col-span-2,
            .lg\:col-span-1 {
                grid-column: span 1;
            }
            
            .h-\[calc\(100vh-450px\)\] {
                height: calc(100vh - 250px);
            }
            
            .max-h-\[calc\(100vh-300px\)\] {
                max-height: calc(100vh - 200px);
            }
        }

        /* Extra small screens */
        @media (max-width: 640px) {
            .content-scrollable {
                padding: 0.5rem;
                margin-top: 3.5rem;
            }
            
            .h-\[calc\(100vh-450px\)\] {
                height: calc(100vh - 200px);
            }
            
            .max-h-\[calc\(100vh-300px\)\] {
                max-height: calc(100vh - 150px);
            }
            
            .header-fixed {
                padding: 0.5rem;
            }
            
            .footer-sticky {
                padding: 0.5rem;
            }
        }

        /* Ensure proper scrolling behavior */
        html {
            scroll-behavior: smooth;
        }

        /* Prevent horizontal scroll */
        .content-scrollable {
            overflow-x: hidden;
        }

        /* Ensure proper box-sizing */
        * {
            box-sizing: border-box;
        }

        /* Improve performance */
        .sidebar-fixed,
        .header-fixed {
            will-change: transform;
            transform: translateZ(0);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-[#f5f0e9] to-[#e8e0d5]">

    <!-- Fixed Sidebar -->
    <div class="sidebar-fixed">
        <%- include('../partials/sidebar') %>
    </div>

    <!-- Main Content Container -->
    <div class="content-wrapper">
        <!-- Fixed Header -->
        <div class="header-fixed">
            <%- include('../partials/header') %>
        </div>

        <!-- Scrollable Content -->
        <div class="content-scrollable">
            <div class="max-w-7xl mx-auto">
                <!-- Page Header -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-[#7F6D6D] mb-2">Pemesanan Barang & Jasa</h1>
                    <p class="text-[#7B7F75] text-sm">Pilih barang dan jasa yang ingin dipesan, kemudian tentukan tanggal peminjaman</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Left column: Items (scrollable) -->
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-2xl shadow-lg p-6 h-[calc(100vh-380px)] overflow-hidden">
                            <div class="h-full overflow-y-auto custom-scrollbar pr-2">
                                <!-- Error Message -->
                                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                                    <div class="bg-red-50 border-l-4 border-red-400 text-red-700 px-4 py-3 rounded-r mb-6">
                                        <div class="flex">
                                            <i class="fas fa-exclamation-circle mr-2 mt-0.5"></i>
                                            <span><%= errorMessage %></span>
                                        </div>
                                    </div>
                                <% } %>

                                <!-- Success Message (will be shown via JavaScript) -->
                                <div id="success-message" class="bg-green-50 border-l-4 border-green-400 text-green-700 px-4 py-3 rounded-r mb-6 hidden">
                                </div>

                                <!-- Items List -->
                                <% if (items && items.length > 0) { %>
                                    <div class="mb-8">
                                        <h2 class="text-xl font-bold text-[#7F6D6D] mb-4 flex items-center">
                                            <i class="fas fa-boxes mr-2 text-[#697565]"></i>
                                            Daftar Barang Tersedia
                                        </h2>
                                        <div class="grid gap-4">
                                            <% items.forEach((item) => { %>
                                                <div class="item-card bg-white rounded-xl p-6 border border-gray-100">
                                                    <div class="flex items-start space-x-4">
                                                        <!-- Image -->
                                                        <div class="flex-shrink-0">
                                                            <% if ((item.photo || item.foto) && (item.photo || item.foto).trim() !== '') { %>
                                                                <img 
                                                                    alt="<%= item.name || item.nama %>" 
                                                                    class="w-24 h-24 object-cover rounded-lg shadow-sm" 
                                                                    src="<%= item.photo || item.foto %>"
                                                                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                                />
                                                                <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center shadow-sm" style="display: none;">
                                                                    <i class="fas fa-image text-gray-400 text-2xl"></i>
                                                                </div>
                                                            <% } else { %>
                                                                <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center shadow-sm">
                                                                    <i class="fas fa-image text-gray-400 text-2xl"></i>
                                                                </div>
                                                            <% } %>
                                                        </div>

                                                        <!-- Content -->
                                                        <div class="flex-1 min-w-0">
                                                            <h3 class="text-lg font-semibold text-[#7F6D6D] mb-2">
                                                                <%= item.name || item.nama %>
                                                            </h3>
                                                            
                                                            <div class="grid grid-cols-2 gap-4 text-sm text-[#7B7F75] mb-3">
                                                                <div>
                                                                    <span class="font-medium">Kategori:</span>
                                                                    <span class="ml-1"><%= item.category || item.kategori %></span>
                                                                </div>
                                                                <div>
                                                                    <span class="font-medium">Stok:</span>
                                                                    <span class="ml-1 text-[#697565] font-semibold"><%= item.quantity || item.jumlah %></span>
                                                                </div>
                                                                <div class="col-span-2">
                                                                    <span class="font-medium">Harga:</span>
                                                                    <span class="ml-1 text-lg font-bold text-[#697565]">
                                                                        Rp <%= typeof (item.price || item.harga) === 'number' ? (item.price || item.harga).toLocaleString('id-ID') : (item.price || item.harga) %>,-
                                                                    </span>
                                                                </div>
                                                            </div>

                                                            <% if ((item.description || item.deskripsi) && (item.description || item.deskripsi).trim() !== '') { %>
                                                                <p class="text-sm text-gray-600 mb-3 italic">
                                                                    "<%= item.description || item.deskripsi %>"
                                                                </p>
                                                            <% } %>

                                                            <% if (item.status && item.status !== 'available') { %>
                                                                <div class="mb-3">
                                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                                                        Status: <%= item.status %>
                                                                    </span>
                                                                </div>
                                                            <% } %>

                                                            <!-- Quantity and Add Button -->
                                                            <div class="flex items-center space-x-3">
                                                                <div class="flex items-center space-x-2">
                                                                    <label class="text-sm font-medium text-[#7F6D6D]">Jumlah:</label>
                                                                    <input 
                                                                        type="number" 
                                                                        min="1" 
                                                                        max="<%= item.quantity || item.jumlah %>" 
                                                                        value="1" 
                                                                        class="input-qty-item w-20 px-3 py-2 border border-gray-300 rounded-lg text-center text-sm font-medium text-[#7F6D6D] focus:ring-2 focus:ring-[#697565] focus:border-transparent" 
                                                                        data-id="<%= item.id || item.id_item %>" 
                                                                    />
                                                                </div>
                                                                <button 
                                                                    type="button" 
                                                                    class="btn-primary px-4 py-2 text-white rounded-lg font-medium text-sm flex items-center space-x-2 btn-tambah-item" 
                                                                    data-id="<%= item.id || item.id_item %>"
                                                                    data-name="<%= item.name || item.nama %>"
                                                                    data-price="<%= item.price || item.harga %>"
                                                                    data-max="<%= item.quantity || item.jumlah %>"
                                                                >
                                                                    <i class="fas fa-plus text-xs"></i>
                                                                    <span>Tambah</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="bg-white rounded-xl p-8 text-center border-2 border-dashed border-gray-200">
                                        <i class="fas fa-box-open text-6xl mb-4 text-gray-300"></i>
                                        <h3 class="text-lg font-medium text-gray-500 mb-2">Tidak ada barang tersedia</h3>
                                        <p class="text-sm text-gray-400 mb-4">Barang akan muncul di sini ketika tersedia</p>
                                        <button onclick="location.reload()" class="btn-secondary px-4 py-2 rounded-lg text-sm font-medium text-[#7F6D6D] hover:text-[#5a6356]">
                                            <i class="fas fa-refresh mr-2"></i>
                                            Muat Ulang
                                        </button>
                                    </div>
                                <% } %>

                                <!-- Services List -->
                                <% if (typeof services !== 'undefined' && services && services.length > 0) { %>
                                    <div class="mt-8">
                                        <h2 class="text-xl font-bold text-[#7F6D6D] mb-4 flex items-center">
                                            <i class="fas fa-tools mr-2 text-[#697565]"></i>
                                            Daftar Jasa Tersedia
                                        </h2>
                                        <div class="grid gap-4">
                                            <% services.forEach((service) => { %>
                                                <div class="item-card bg-white rounded-xl p-6 border border-gray-100">
                                                    <div class="flex items-start space-x-4">
                                                        <!-- Image -->
                                                        <div class="flex-shrink-0">
                                                            <% if (service.photo && service.photo.trim() !== '') { %>
                                                                <img 
                                                                    alt="<%= service.name %>" 
                                                                    class="w-24 h-24 object-cover rounded-lg shadow-sm" 
                                                                    src="<%= service.photo %>"
                                                                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                                />
                                                                <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center shadow-sm" style="display: none;">
                                                                    <i class="fas fa-image text-gray-400 text-2xl"></i>
                                                                </div>
                                                            <% } else { %>
                                                                <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center shadow-sm">
                                                                    <i class="fas fa-image text-gray-400 text-2xl"></i>
                                                                </div>
                                                            <% } %>
                                                        </div>

                                                        <!-- Content -->
                                                        <div class="flex-1 min-w-0">
                                                            <h3 class="text-lg font-semibold text-[#7F6D6D] mb-2">
                                                                <%= service.name %>
                                                            </h3>
                                                            
                                                            <div class="grid grid-cols-2 gap-4 text-sm text-[#7B7F75] mb-3">
                                                                <div>
                                                                    <span class="font-medium">Kategori:</span>
                                                                    <span class="ml-1"><%= service.category %></span>
                                                                </div>
                                                                <div>
                                                                    <span class="font-medium">Stok:</span>
                                                                    <span class="ml-1 text-[#697565] font-semibold"><%= service.quantity || 1 %></span>
                                                                </div>
                                                                <div class="col-span-2">
                                                                    <span class="font-medium">Harga:</span>
                                                                    <span class="ml-1 text-lg font-bold text-[#697565]">
                                                                        Rp <%= typeof service.price === 'number' ? service.price.toLocaleString('id-ID') : service.price %>,-
                                                                    </span>
                                                                </div>
                                                            </div>

                                                            <% if (service.description && service.description.trim() !== '') { %>
                                                                <p class="text-sm text-gray-600 mb-3 italic">
                                                                    "<%= service.description %>"
                                                                </p>
                                                            <% } %>

                                                            <% if (service.status && service.status !== 'available') { %>
                                                                <div class="mb-3">
                                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                                                        Status: <%= service.status %>
                                                                    </span>
                                                                </div>
                                                            <% } %>

                                                            <!-- Quantity and Add Button -->
                                                            <div class="flex items-center space-x-3">
                                                                <div class="flex items-center space-x-2">
                                                                    <label class="text-sm font-medium text-[#7F6D6D]">Jumlah:</label>
                                                                    <input 
                                                                        type="number" 
                                                                        min="1" 
                                                                        max="<%= service.quantity || 1 %>" 
                                                                        value="1" 
                                                                        class="input-qty-service w-20 px-3 py-2 border border-gray-300 rounded-lg text-center text-sm font-medium text-[#7F6D6D] focus:ring-2 focus:ring-[#697565] focus:border-transparent" 
                                                                        data-id="<%= service.id %>" 
                                                                    />
                                                                </div>
                                                                <button 
                                                                    type="button" 
                                                                    class="btn-primary px-4 py-2 text-white rounded-lg font-medium text-sm flex items-center space-x-2 btn-tambah-service" 
                                                                    data-id="<%= service.id %>"
                                                                    data-name="<%= service.name %>"
                                                                    data-price="<%= service.price %>"
                                                                    data-max="<%= service.quantity || 1 %>"
                                                                >
                                                                    <i class="fas fa-plus text-xs"></i>
                                                                    <span>Tambah</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Right column: Order Summary -->
                    <div class="lg:col-span-1">
                        <div class="bg-white rounded-2xl shadow-lg p-6 h-[calc(100vh-380px)] overflow-y-auto">
                            <h2 class="text-xl font-bold text-[#7F6D6D] mb-6 flex items-center">
                                <i class="fas fa-shopping-cart mr-2 text-[#697565]"></i>
                                Ringkasan Pesanan
                            </h2>

                            <form id="order-form" class="space-y-6">
                                <!-- Date Selection -->
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium text-[#7F6D6D] mb-2">
                                            <i class="fas fa-calendar-plus mr-1"></i>
                                            Tanggal Peminjaman
                                        </label>
                                        <input 
                                            type="date" 
                                            id="tanggal-pinjam"
                                            name="tanggal_pinjam"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm text-[#7F6D6D] focus:ring-2 focus:ring-[#697565] focus:border-transparent bg-gray-50"
                                            required
                                        />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-[#7F6D6D] mb-2">
                                            <i class="fas fa-calendar-minus mr-1"></i>
                                            Tanggal Pengembalian
                                        </label>
                                        <input 
                                            type="date" 
                                            id="tanggal-kembali"
                                            name="tanggal_kembali"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm text-[#7F6D6D] focus:ring-2 focus:ring-[#697565] focus:border-transparent bg-gray-50"
                                            required
                                        />
                                    </div>
                                </div>

                                <!-- Notes -->
                                <div>
                                    <label class="block text-sm font-medium text-[#7F6D6D] mb-2">
                                        <i class="fas fa-sticky-note mr-1"></i>
                                        Catatan (Opsional)
                                    </label>
                                    <textarea 
                                        id="catatan"
                                        name="catatan"
                                        placeholder="Tambahkan catatan khusus untuk pesanan Anda..."
                                        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm text-[#7F6D6D] focus:ring-2 focus:ring-[#697565] focus:border-transparent bg-gray-50 resize-none"
                                        rows="3"
                                    ></textarea>
                                </div>

                                <!-- Selected Items -->
                                <div class="border-t pt-4">
                                    <h3 class="text-sm font-medium text-[#7F6D6D] mb-3">Item yang Dipilih:</h3>
                                    <div id="selected-items" class="space-y-2 max-h-40 overflow-y-auto custom-scrollbar">
                                        <div class="text-sm text-gray-500 italic">Belum ada item yang dipilih</div>
                                    </div>
                                </div>

                                <!-- Total -->
                                <div class="border-t pt-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-lg font-bold text-[#7F6D6D]">Total:</span>
                                        <span id="total-harga" class="text-2xl font-bold text-[#697565]">Rp 0</span>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <button
                                    id="btn-pesan"
                                    class="w-full btn-primary py-3 rounded-lg font-semibold text-white text-lg flex items-center justify-center space-x-2 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-300"
                                    type="submit"
                                >
                                    <span id="btn-text">Lanjut ke MOU</span>
                                    <i id="btn-loading" class="fas fa-spinner fa-spin hidden"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Fixed Footer -->
        <div class="footer-sticky">
            <%- include('../partials/footer') %>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const totalHargaElement = document.getElementById('total-harga');
            const selectedItemsElement = document.getElementById('selected-items');
            const orderForm = document.getElementById('order-form');
            const btnPesan = document.getElementById('btn-pesan');
            const btnText = document.getElementById('btn-text');
            const btnLoading = document.getElementById('btn-loading');
            const tanggalPinjam = document.getElementById('tanggal-pinjam');
            const tanggalKembali = document.getElementById('tanggal-kembali');
            const successMessage = document.getElementById('success-message');

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            tanggalPinjam.min = today;
            tanggalKembali.min = today;

            // Update minimum and maximum return date when borrow date changes
            tanggalPinjam.addEventListener('change', function() {
                const selectedDate = new Date(this.value);
                const nextDay = new Date(selectedDate);
                nextDay.setDate(selectedDate.getDate() + 1);
                const maxReturn = new Date(selectedDate);
                maxReturn.setDate(selectedDate.getDate() + 3);
                tanggalKembali.min = nextDay.toISOString().split('T')[0];
                tanggalKembali.max = maxReturn.toISOString().split('T')[0];
                // If return date is before or equal to borrow date, or more than 3 days, reset it
                if (tanggalKembali.value <= this.value || new Date(tanggalKembali.value) > maxReturn) {
                    tanggalKembali.value = nextDay.toISOString().split('T')[0];
                }
            });

            // Validasi tanggal_kembali saat diubah
            tanggalKembali.addEventListener('change', function() {
                const pinjamDate = new Date(tanggalPinjam.value);
                const kembaliDate = new Date(this.value);
                const maxReturn = new Date(pinjamDate);
                maxReturn.setDate(pinjamDate.getDate() + 3);
                if (kembaliDate > maxReturn) {
                    alert('Tanggal pengembalian maksimal 3 hari dari tanggal peminjaman!');
                    this.value = maxReturn.toISOString().split('T')[0];
                }
            });

            function showMessage(message, isError = false) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `px-4 py-3 rounded-lg mb-6 flex items-center ${isError ? 'bg-red-50 border-l-4 border-red-400 text-red-700' : 'bg-green-50 border-l-4 border-green-400 text-green-700'}`;
                messageDiv.innerHTML = `
                    <i class="fas ${isError ? 'fa-exclamation-circle' : 'fa-check-circle'} mr-2"></i>
                    <span>${message}</span>
                `;
                
                // Find the items container to insert message
                const itemsContainer = document.querySelector('.h-full.overflow-y-auto');
                if (itemsContainer) {
                    const firstChild = itemsContainer.firstElementChild;
                    itemsContainer.insertBefore(messageDiv, firstChild);
                } else {
                    // Fallback to content-scrollable if items container not found
                    const scrollableContent = document.querySelector('.content-scrollable');
                    const firstChild = scrollableContent.firstElementChild;
                    scrollableContent.insertBefore(messageDiv, firstChild);
                }
                
                // Auto remove after 5 seconds
                setTimeout(() => {
                    messageDiv.remove();
                }, 5000);
            }

            function setLoading(loading) {
                if (loading) {
                    btnText.textContent = 'Memproses...';
                    btnLoading.classList.remove('hidden');
                    btnPesan.disabled = true;
                    document.body.classList.add('loading');
                } else {
                    btnText.textContent = 'Lanjut ke MOU';
                    btnLoading.classList.add('hidden');
                    btnPesan.disabled = false;
                    document.body.classList.remove('loading');
                }
            }

            let pesanan = [];

            function renderPesanan() {
                const selectedItemsElement = document.getElementById('selected-items');
                let total = 0;
                
                if (pesanan.length === 0) {
                    selectedItemsElement.innerHTML = '<div class="text-sm text-gray-500 italic">Belum ada item yang dipilih</div>';
                    document.getElementById('total-harga').textContent = 'Rp 0';
                    return;
                }

                selectedItemsElement.innerHTML = pesanan.map((item, idx) => {
                    const itemTotal = item.price * item.quantity;
                    total += itemTotal;
                    return `
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div class="flex-1">
                                <div class="flex items-center space-x-2">
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${item.type === 'tool' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800'}">
                                        <i class="fas ${item.type === 'tool' ? 'fa-box' : 'fa-tools'} mr-1"></i>
                                        ${item.type === 'tool' ? 'Alat' : 'Jasa'}
                                    </span>
                                    <span class="font-medium text-[#7F6D6D]">${item.name}</span>
                                </div>
                                <div class="text-sm text-gray-600 mt-1">
                                    ${item.quantity}x @ Rp ${item.price.toLocaleString('id-ID')} = Rp ${itemTotal.toLocaleString('id-ID')}
                                </div>
                            </div>
                            <button type="button" class="text-red-500 hover:text-red-700 ml-2 btn-hapus-pesanan" data-idx="${idx}">
                                <i class="fas fa-trash text-sm"></i>
                            </button>
                        </div>
                    `;
                }).join('');
                
                document.getElementById('total-harga').textContent = `Rp ${total.toLocaleString('id-ID')}`;
            }

            document.body.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn-tambah-item')) {
                    const id = e.target.dataset.id;
                    const name = e.target.dataset.name;
                    const price = parseFloat(e.target.dataset.price);
                    const max = parseInt(e.target.dataset.max);
                    const qty = parseInt(document.querySelector(`.input-qty-item[data-id='${id}']`).value);
                    if (qty > max) return alert('Jumlah melebihi stok!');
                    const existing = pesanan.find(p => p.type === 'tool' && p.id == id);
                    if (existing) {
                        existing.quantity += qty;
                        if (existing.quantity > max) existing.quantity = max;
                    } else {
                        pesanan.push({type: 'tool', id, name, price, quantity: qty});
                    }
                    renderPesanan();
                    showMessage(`${name} berhasil ditambahkan ke pesanan!`, false);
                }
                if (e.target.classList.contains('btn-tambah-service')) {
                    const id = e.target.dataset.id;
                    const name = e.target.dataset.name;
                    const price = parseFloat(e.target.dataset.price);
                    const max = parseInt(e.target.dataset.max);
                    const qty = parseInt(document.querySelector(`.input-qty-service[data-id='${id}']`).value);
                    if (qty > max) return alert('Jumlah melebihi stok!');
                    const existing = pesanan.find(p => p.type === 'service' && p.id == id);
                    if (existing) {
                        existing.quantity += qty;
                        if (existing.quantity > max) existing.quantity = max;
                    } else {
                        pesanan.push({type: 'service', id, name, price, quantity: qty});
                    }
                    renderPesanan();
                    showMessage(`${name} berhasil ditambahkan ke pesanan!`, false);
                }
                if (e.target.classList.contains('btn-hapus-pesanan')) {
                    const idx = parseInt(e.target.dataset.idx);
                    const removedItem = pesanan[idx];
                    pesanan.splice(idx, 1);
                    renderPesanan();
                    showMessage(`${removedItem.name} dihapus dari pesanan`, false);
                }
            });

            orderForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                if (pesanan.length === 0) {
                    alert('Pilih minimal satu alat atau jasa!');
                    return;
                }
                // Ambil tanggal
                const tanggalPinjam = document.getElementById('tanggal-pinjam').value;
                const tanggalKembali = document.getElementById('tanggal-kembali').value;
                const catatan = document.getElementById('catatan').value;
                if (!tanggalPinjam || !tanggalKembali) {
                    alert('Tanggal peminjaman dan pengembalian harus diisi!');
                    return;
                }
                // Simpan data ke localStorage
                localStorage.setItem('pemesananData', JSON.stringify({
                    pesanan,
                    startDate: tanggalPinjam,
                    endDate: tanggalKembali,
                    notes: catatan
                }));
                window.location.href = '/user/mou';
            });

            // Initial render
            renderPesanan();

            // Load selected items from session storage (from home page)
            function loadSelectedItemsFromSession() {
                const selectedItems = JSON.parse(sessionStorage.getItem('selectedItems') || '[]');
                
                if (selectedItems.length > 0) {
                    console.log('Loading selected items from session:', selectedItems);
                    
                    // Clear session storage after loading
                    sessionStorage.removeItem('selectedItems');
                    
                    // Add each selected item to pesanan
                    selectedItems.forEach(item => {
                        // Find the item/service in the available items
                        let foundItem = null;
                        
                        if (item.type === 'item') {
                            // Look for item in tools
                            const toolElements = document.querySelectorAll('.btn-tambah-item');
                            toolElements.forEach(btn => {
                                if (parseInt(btn.dataset.id) === item.id) {
                                    foundItem = {
                                        type: 'tool',
                                        id: parseInt(btn.dataset.id),
                                        name: btn.dataset.name,
                                        price: parseFloat(btn.dataset.price),
                                        quantity: item.quantity
                                    };
                                }
                            });
                        } else if (item.type === 'service') {
                            // Look for service in services
                            const serviceElements = document.querySelectorAll('.btn-tambah-service');
                            serviceElements.forEach(btn => {
                                if (parseInt(btn.dataset.id) === item.id) {
                                    foundItem = {
                                        type: 'service',
                                        id: parseInt(btn.dataset.id),
                                        name: btn.dataset.name,
                                        price: parseFloat(btn.dataset.price),
                                        quantity: item.quantity
                                    };
                                }
                            });
                        }
                        
                        if (foundItem) {
                            // Check if item already exists in pesanan
                            const existing = pesanan.find(p => p.type === foundItem.type && p.id === foundItem.id);
                            if (existing) {
                                existing.quantity += foundItem.quantity;
                            } else {
                                pesanan.push(foundItem);
                            }
                            
                            showMessage(`${foundItem.name} berhasil ditambahkan ke pesanan!`, false);
                        }
                    });
                    
                    // Re-render pesanan
                    renderPesanan();
                }
            }

            // Load selected items when page loads
            loadSelectedItemsFromSession();

            // Check for connection to database
            console.log('Pemesanan page loaded successfully');
            console.log('Layout: Fixed sidebar with sticky footer');
            console.log('Screen size:', window.innerWidth, 'x', window.innerHeight);
            
            // Check if all elements are properly loaded
            const sidebar = document.querySelector('.sidebar-fixed');
            const header = document.querySelector('.header-fixed');
            const footer = document.querySelector('.footer-sticky');
            const content = document.querySelector('.content-scrollable');
            
            console.log('Sidebar found:', !!sidebar);
            console.log('Header found:', !!header);
            console.log('Footer found:', !!footer);
            console.log('Content found:', !!content);
            
            // Handle window resize for responsive design
            window.addEventListener('resize', function() {
                console.log('Window resized to:', window.innerWidth, 'x', window.innerHeight);
                // Force reflow to ensure layout updates
                document.body.offsetHeight;
            });
        });
    </script>
